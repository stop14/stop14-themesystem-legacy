{#
/**
 * @file
 * Theme override to display a media item.
 *
 * Available variables:
 * - name: Name of the media.
 * - content: Media content.
 *
 * @see template_preprocess_media()
 */
#}
<article{{ attributes.addClass(view_mode).addClass('media') }}>
  {{ title_suffix.contextual_links }}
  {% if content %}
    <figure>
      {{ content|without('field_title', 'field_caption') }}
      {{ content.field_title }}
      {{ content.field_caption }}
    </figure>
  {% endif %}
</article>
